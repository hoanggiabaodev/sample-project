@model Web_ProjectName.Models.M_News

<div class="modal fade" id="addNewsModal" tabindex="-1" aria-labelledby="addNewsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addNewsModalLabel">Thêm tin tức mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="newsForm">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="newsTitle" class="form-label">Tiêu đề tin tức <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="newsTitle" name="name" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="newsCategory" class="form-label">Danh mục <span class="text-danger">*</span></label>
                                <select class="form-select" id="newsCategory" name="newsCategoryId" required>
                                    <option value="">Chọn danh mục</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="newsPublishedDate" class="form-label">Ngày đăng</label>
                                <input type="text" class="form-control datepicker" id="newsPublishedDate" name="publishedAt">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="newsStatus" class="form-label">Trạng thái <span class="text-danger">*</span></label>
                                <select class="form-select" id="newsStatus" name="status" required>
                                    <option value="">Chọn trạng thái</option>
                                    <option value="0">Không hoạt động</option>
                                    <option value="1">Hoạt động</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="newsIsHot" name="isHot">
                                    <label class="form-check-label" for="newsIsHot">
                                        <i class="fas fa-fire me-2 text-danger"></i>Tin nổi bật
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="newsDescription" class="form-label">Mô tả ngắn</label>
                        <textarea class="form-control" id="newsDescription" name="description" rows="3" placeholder="Nhập mô tả ngắn cho tin tức..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="newsContent" class="form-label">Nội dung chi tiết</label>
                        <textarea class="form-control" id="newsContent" name="detail" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Hình ảnh</label>

                        <div class="upload-area" id="uploadArea">
                            <input type="file" class="hidden-input" id="fileInput" accept="image/*">

                            <div class="upload-content" id="uploadContent">
                                <div class="upload-icon">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                </div>
                                <div class="upload-text">Kéo thả hình ảnh vào đây</div>
                                <div class="upload-subtext">
                                    hoặc <a href="#" class="upload-link" id="browseLink">chọn từ máy tính</a>
                                </div>
                                <div class="file-info">Hỗ trợ: JPG, PNG, GIF (tối đa 10MB)</div>
                            </div>
                        </div>

                        <div class="file-details" id="fileDetails">
                            <div class="file-item">
                                <div class="file-info-left">
                                    <i class="fas fa-image" style="color: #10b981;"></i>
                                    <div>
                                        <div class="file-name" id="fileName"></div>
                                        <div class="file-size" id="fileSize"></div>
                                    </div>
                                </div>
                                <div class="file-actions">
                                    <button class="btn" id="changeBtn">Thay đổi</button>
                                    <button class="btn btn-danger" id="removeBtn">
                                        <i class="fas fa-times"></i> Xóa
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="preview-section" id="previewSection" style="display: none;">
                            <div class="preview-title">Xem trước hình ảnh:</div>
                            <div class="image-preview">
                                <img id="previewImage" class="preview-image" src="/placeholder.svg" alt="Preview">
                                <button class="remove-preview" id="removePreview">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <div class="alert" id="imageAlert">
                            <i class="fas fa-info-circle"></i>
                            <span class="alert-text">Vui lòng chọn hình ảnh cho tin tức mới</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnSaveNews">Lưu tin tức</button>
            </div>
        </div>
    </div>
</div>

<style>
    .upload-area {
        border: 2px dashed #d1d5db;
        border-radius: 8px;
        padding: 40px 20px;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        background-color: #fafafa;
    }

    .upload-area:hover {
        border-color: #9ca3af;
        background-color: #f3f4f6;
    }

    .upload-area.drag-active {
        border-color: #3b82f6;
        background-color: #eff6ff;
    }

    .upload-area.has-file {
        border-color: #10b981;
        background-color: #f0fdf4;
    }

    .upload-icon {
        width: 48px;
        height: 48px;
        background-color: #f3f4f6;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
        transition: all 0.3s ease;
    }

    .upload-area.drag-active .upload-icon {
        background-color: #dbeafe;
    }

    .upload-area.has-file .upload-icon {
        background-color: #dcfce7;
    }

    .upload-icon i {
        font-size: 20px;
        color: #6b7280;
    }

    .upload-area.drag-active .upload-icon i {
        color: #3b82f6;
    }

    .upload-area.has-file .upload-icon i {
        color: #10b981;
    }

    .upload-text {
        font-size: 14px;
        font-weight: 500;
        color: #1f2937;
        margin-bottom: 4px;
    }

    .upload-subtext {
        font-size: 12px;
        color: #6b7280;
        margin-bottom: 8px;
    }

    .upload-link {
        color: #3b82f6;
        text-decoration: none;
        font-weight: 500;
    }

    .upload-link:hover {
        color: #2563eb;
    }

    .file-info {
        font-size: 11px;
        color: #9ca3af;
    }

    .hidden-input {
        display: none;
    }

    .file-details {
        display: none;
        margin-top: 16px;
    }

    .file-details.show {
        display: block;
    }

    .file-item {
        background-color: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        padding: 12px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .file-info-left {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .file-name {
        font-weight: 500;
        color: #1f2937;
        font-size: 13px;
    }

    .file-size {
        color: #6b7280;
        font-size: 11px;
    }

    .file-actions {
        display: flex;
        gap: 8px;
    }

    .btn:hover {
        background-color: #f9fafb;
    }

    .btn-danger:hover {
        background-color: #fef2f2;
    }

    .preview-section {
        margin-top: 20px;
    }

    .preview-title {
        font-size: 13px;
        font-weight: 500;
        color: #374151;
        margin-bottom: 8px;
    }

    .image-preview {
        position: relative;
        display: inline-block;
    }

    .preview-image {
        max-width: 200px;
        height: 120px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid #e5e7eb;
    }

    .remove-preview {
        position: absolute;
        top: -8px;
        right: -8px;
        width: 20px;
        height: 20px;
        background: #dc2626;
        color: white;
        border: none;
        border-radius: 50%;
        cursor: pointer;
        font-size: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .alert {
        background-color: #eff6ff;
        border: 1px solid #bfdbfe;
        border-radius: 6px;
        padding: 12px;
        margin-top: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .alert i {
        color: #3b82f6;
    }

    .alert-text {
        color: #1e40af;
        font-size: 13px;
    }
</style>