@model Web_ProjectName.Models.M_News

<div class="modal fade" id="editNewsModal" tabindex="-1" aria-labelledby="editNewsModalLabel" aria-hidden="true"
    style="z-index: 1050;">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="editNewsModalLabel">
                    <i class="fas fa-edit me-2"></i>Chỉnh sửa tin tức
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editNewsForm">
                    <input type="hidden" id="editNewsId" name="id">
                    <input type="hidden" id="editNewsMetaKeywords" name="metaKeywords">
                    <input type="hidden" id="editNewsMetaDescription" name="metaDescription">
                    <input type="hidden" id="editNewsMetaTitle" name="metaTitle">
                    <input type="hidden" id="editNewsMetaImagePreview" name="metaImagePreview">
                    <input type="hidden" id="editNewsImageId" name="imageId">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="editNewsTitle" class="form-label fw-bold">Tiêu đề tin tức <span
                                        class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="editNewsTitle" name="name" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="editNewsCategory" class="form-label fw-bold">Danh mục <span
                                        class="text-danger">*</span></label>
                                <select class="form-control select2" id="editNewsCategory" name="newsCategoryId"
                                    required>
                                    <option value="">Chọn danh mục</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editNewsPublishedDate" class="form-label fw-bold">Ngày đăng</label>
                                <input type="text" class="form-control datepicker" id="editNewsPublishedDate"
                                    name="publishedAt">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="editNewsIsHot" name="isHot">
                                    <label class="form-check-label fw-bold" for="editNewsIsHot">
                                        <i class="fas fa-fire me-2 text-danger"></i>Tin nổi bật
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editNewsStatus" class="form-label fw-bold">Trạng thái <span
                                        class="text-danger">*</span></label>
                                <select class="form-control" id="editNewsStatus" name="status" required>
                                    <option value="">Chọn trạng thái</option>
                                    <option value="0">Không hoạt động</option>
                                    <option value="1">Hoạt động</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editNewsDescription" class="form-label fw-bold">Mô tả ngắn</label>
                        <textarea class="form-control" id="editNewsDescription" name="description" rows="3"
                            placeholder="Nhập mô tả ngắn cho tin tức..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editNewsContent" class="form-label fw-bold">Nội dung chi tiết</label>
                        <textarea id="editNewsContent" name="detail"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editNewsImage" class="form-label fw-bold">Hình ảnh</label>
                        <input type="file" class="form-control" id="editNewsImage" accept="image/*">
                        <div class="form-text">Chọn hình ảnh mới cho tin tức (JPG, PNG, GIF)</div>
                        <div id="currentImagePreview" class="mt-2">
                            <div class="alert alert-info">
                                <i class="fas fa-image me-2"></i>Hình ảnh hiện tại sẽ được hiển thị khi tải dữ liệu
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Hủy
                </button>
                <button type="button" class="btn btn-warning" id="btnUpdateNews">
                    <i class="fas fa-save me-2"></i>Cập nhật tin tức
                </button>
            </div>
        </div>
    </div>
</div>
