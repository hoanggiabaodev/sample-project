@model Web_ProjectName.Models.M_News

<div class="modal fade" id="editNewsModal" tabindex="-1" aria-labelledby="editNewsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editNewsModalLabel">Chỉnh sửa tin tức</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editNewsForm">
                    <input type="hidden" id="editNewsId" name="id">
                    <input type="hidden" id="editNewsMetaKeywords" name="metaKeywords">
                    <input type="hidden" id="editNewsMetaDescription" name="metaDescription">
                    <input type="hidden" id="editNewsMetaTitle" name="metaTitle">
                    <input type="hidden" id="editNewsMetaImagePreview" name="metaImagePreview">
                    <input type="hidden" id="editNewsImageId" name="imageId">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="editNewsTitle" class="form-label">Tiêu đề tin tức *</label>
                                <input type="text" class="form-control" id="editNewsTitle" name="name" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="editNewsCategory" class="form-label">Danh mục *</label>
                                <select class="form-control select2" id="editNewsCategory" name="newsCategoryId"
                                    required>
                                    <option value="">Chọn danh mục</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editNewsPublishedDate" class="form-label">Ngày đăng</label>
                                <input type="text" class="form-control datepicker" id="editNewsPublishedDate"
                                    name="publishedAt">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="editNewsIsHot" name="isHot">
                                    <label class="form-check-label" for="editNewsIsHot">
                                        Tin nổi bật
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editNewsDescription" class="form-label">Mô tả ngắn</label>
                        <textarea class="form-control" id="editNewsDescription" name="description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editNewsContent" class="form-label">Nội dung chi tiết</label>
                        <textarea id="editNewsContent" name="detail"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editNewsImage" class="form-label">Hình ảnh</label>
                        <input type="file" class="form-control" id="editNewsImage" accept="image/*">
                        <div id="currentImagePreview" class="mt-2"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnUpdateNews">
                    <i class="fas fa-save"></i> Cập nhật tin tức
                </button>
            </div>
        </div>
    </div>
</div>
