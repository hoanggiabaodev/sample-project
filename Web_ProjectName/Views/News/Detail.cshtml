@model Web_ProjectName.Models.M_News
@{
    ViewData["Title"] = Model?.name ?? "Chi tiết tin tức";
    ViewData["Description"] = Model?.description ?? "Chi tiết tin tức";
    Layout = "_LayoutNews";
}

<!-- Trending Area Start -->
<div class="trending-area fix">
    <div class="container">
        <div class="trending-main">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Trending Top -->
                    <div class="trending-top mb-30">
                        <div class="trend-top-img">
                            @if (Model != null)
                            {
                                <img src="@(Model.imageObj?.relativeUrl ?? "~/template/aznews-master/assets/img/trending/trending_top.jpg")"
                                    alt="@Model.name">
                                <div class="trend-top-cap">
                                    <span class="color1">@(Model.newsCategoryObj?.name ?? "Tin tức")</span>
                                    <h4>@Model.name</h4>
                                </div>
                            }
                            else
                            {
                                <img src="~/template/aznews-master/assets/img/trending/trending_top.jpg"
                                    alt="Chi tiết tin tức">
                                <div class="trend-top-cap">
                                    <span class="color1">Tin tức</span>
                                    <h4>Chi tiết tin tức</h4>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Trending Area End -->

<!-- Whats New Start -->
<section class="whats-news-area pt-50 pb-20">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @if (Model != null)
                {
                    <div class="single-news mb-100">
                        <div class="news-img">
                            <img src="@(Model.imageObj?.relativeUrl ?? "~/images/OIP.webp")"
                                alt="@Model.name">
                        </div>
                        <div class="news-caption">
                            <h3>@Model.name</h3>
                            <div class="news-meta">
                                <span class="color1">@(Model.newsCategoryObj?.name ?? "Tin tức")</span>
                                <span class="color1">@Model.publishedAt?.ToString("dd/MM/yyyy HH:mm")</span>
                                <span class="color1"><i class="fas fa-eye"></i> @(Model.viewNumber ?? 0) lượt xem</span>
                                @if (Model.isHot)
                                {
                                    <span class="color1"><i class="fas fa-fire"></i> Hot</span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(Model.description))
                            {
                                <div class="news-description mb-4">
                                    <p class="lead">@Model.description</p>
                                </div>
                            }
                            <div class="news-content">
                                @Html.Raw(Model.detail ?? "Nội dung chi tiết sẽ được cập nhật sớm.")
                            </div>
                        </div>
                    </div>

                    <!-- Share buttons -->
                    <div class="social-share pt-30">
                        <div class="section-tittle">
                            <h3 class="mr-20">Chia sẻ bài viết:</h3>
                            <ul>
                                <li><a href="#"><img src="~/template/aznews-master/assets/img/news/icon-ins.png" alt=""></a>
                                </li>
                                <li><a href="#"><img src="~/template/aznews-master/assets/img/news/icon-fb.png" alt=""></a>
                                </li>
                                <li><a href="#"><img src="~/template/aznews-master/assets/img/news/icon-tw.png" alt=""></a>
                                </li>
                                <li><a href="#"><img src="~/template/aznews-master/assets/img/news/icon-yo.png" alt=""></a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Related news -->
                    <div class="related-news">
                        <div class="section-tittle mb-30">
                            <h3>Tin tức liên quan</h3>
                        </div>
                        <div class="row">
                            <!-- Placeholder for related news -->
                            <div class="col-md-6">
                                <div class="single-what-news mb-100">
                                    <div class="what-img">
                                        <img src="~/template/aznews-master/assets/img/news/whatNews2.jpg" alt="">
                                    </div>
                                    <div class="what-cap">
                                        <span class="color1">Tin tức</span>
                                        <h4><a href="#">Tin tức liên quan 1</a></h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="single-what-news mb-100">
                                    <div class="what-img">
                                        <img src="~/template/aznews-master/assets/img/news/whatNews3.jpg" alt="">
                                    </div>
                                    <div class="what-cap">
                                        <span class="color1">Tin tức</span>
                                        <h4><a href="#">Tin tức liên quan 2</a></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center">
                        <h3>Không tìm thấy tin tức</h3>
                        <p>Tin tức bạn đang tìm kiếm không tồn tại hoặc đã bị xóa.</p>
                        <a href="/tin-tuc" class="btn btn-primary">Quay lại trang tin tức</a>
                    </div>
                }
            </div>

            <!-- Right Sidebar -->
            <div class="col-lg-4">
                <!-- Section Tittle -->
                <div class="section-tittle mb-40">
                    <h3>Tin Nổi Bật</h3>
                </div>
                <!-- Flow Socail -->
                <div class="single-follow mb-23">
                    <div class="single-box">
                        <div class="follow-us d-flex align-items-center">
                            <div class="follow-social">
                                <a href="#"><img src="~/template/aznews-master/assets/img/news/icon-fb.png" alt=""></a>
                            </div>
                            <div class="follow-count">
                                <span>8,045</span>
                                <p>Fans</p>
                            </div>
                        </div>
                        <div class="follow-us d-flex align-items-center">
                            <div class="follow-social">
                                <a href="#"><img src="~/template/aznews-master/assets/img/news/icon-tw.png" alt=""></a>
                            </div>
                            <div class="follow-count">
                                <span>9,532</span>
                                <p>Fans</p>
                            </div>
                        </div>
                        <div class="follow-us d-flex align-items-center">
                            <div class="follow-social">
                                <a href="#"><img src="~/template/aznews-master/assets/img/news/icon-ins.png" alt=""></a>
                            </div>
                            <div class="follow-count">
                                <span>7,541</span>
                                <p>Fans</p>
                            </div>
                        </div>
                        <div class="follow-us d-flex align-items-center">
                            <div class="follow-social">
                                <a href="#"><img src="~/template/aznews-master/assets/img/news/icon-yo.png" alt=""></a>
                            </div>
                            <div class="follow-count">
                                <span>9,532</span>
                                <p>Fans</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- New Poster -->
                <div class="news-poster d-flex align-items-center">
                    <div class="poster--thumb">
                        <a href="#"><img src="~/template/aznews-master/assets/img/news/news_card.jpg" alt=""></a>
                    </div>
                    <div class="poster--content">
                        <a href="#">
                            <h5>Giải thưởng tin tức hàng năm</h5>
                        </a>
                        <p>@DateTime.Now.ToString("dd MMM yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>