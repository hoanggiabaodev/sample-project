                let current = 0;
                const step = Math.max(1, Math.floor(target / 80));
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) { current = target; clearInterval(timer); }
                    el.textContent = current.toLocaleString('vi-VN') + (target >= 100 ? '+' : '');
                }, 16);
            });
        })();
