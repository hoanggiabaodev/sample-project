@model Web_ProjectName.Models.M_School
@{
    ViewData["Title"] = "Chi tiết công ty";
}

<!-- Add Bootstrap Icons CDN if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            
            <!-- Header Section -->
            <div class="card border-0 shadow-lg mb-4" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        @if (!string.IsNullOrEmpty(Model.logoUrl))
                        {
                            <div class="col-auto mb-3 mb-md-0">
                                <div class="bg-white p-2 rounded shadow-sm">
                                    <img src="@Model.logoUrl" alt="Logo công ty" style="max-height: 80px; width: auto;" class="img-fluid">
                                </div>
                            </div>
                        }
                        <div class="col">
                            <h1 class="display-6 fw-bold text-dark mb-3">@Model.name</h1>
                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge bg-secondary fs-6 px-3 py-2">
                                    <i class="bi bi-building me-1"></i>@Model.shortName
                                </span>
                                <span class="badge bg-outline-secondary fs-6 px-3 py-2 text-dark border">
                                    <i class="bi bi-hash me-1"></i>@Model.code
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <!-- Contact Information -->
                <div class="col-md-6">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="card-title mb-0 d-flex align-items-center">
                                <i class="bi bi-telephone text-primary me-2"></i>
                                Thông tin liên hệ
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Hotline -->
                            <div class="p-3 mb-3 rounded" style="background-color: #fff3cd; border: 1px solid #ffeaa7;">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-telephone-fill text-warning me-3 fs-5"></i>
                                    <div>
                                        <small class="text-muted d-block">Hotline</small>
                                        <strong class="text-warning-emphasis">@Model.hotline</strong>
                                    </div>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="p-3 mb-3 rounded" style="background-color: #cff4fc; border: 1px solid #b8daff;">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-phone text-info me-3 fs-5"></i>
                                    <div>
                                        <small class="text-muted d-block">Điện thoại</small>
                                        <strong class="text-info-emphasis">@Model.phone</strong>
                                    </div>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="p-3 rounded" style="background-color: #d1e7dd; border: 1px solid #badbcc;">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-envelope text-success me-3 fs-5"></i>
                                    <div>
                                        <small class="text-muted d-block">Email</small>
                                        <a href="mailto:@Model.email" class="fw-bold text-success text-decoration-none">
                                            @Model.email
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Address Information -->
                <div class="col-md-6">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="card-title mb-0 d-flex align-items-center">
                                <i class="bi bi-geo-alt text-danger me-2"></i>
                                Địa chỉ trụ sở
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="p-4 rounded bg-light border">
                                <div class="text-muted">
                                    @if (Model.addressObj != null)
                                    {
                                        <p class="fw-medium mb-1">@Model.addressObj.addressText</p>
                                        <p class="mb-1">@Model.addressObj.wardObj?.name</p>
                                        <p class="mb-1">@Model.addressObj.districtObj?.name</p>
                                        <p class="mb-1">@Model.addressObj.provinceObj?.name</p>
                                        <p class="fw-medium mb-0">@Model.addressObj.countryObj?.name</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mt-2">
                <!-- Social Media -->
                @if (!string.IsNullOrEmpty(Model.facebook) || !string.IsNullOrEmpty(Model.zalo) || !string.IsNullOrEmpty(Model.youtube))
                {
                    <div class="col-md-6">
                        <div class="card shadow-sm h-100 border-0">
                            <div class="card-header bg-white border-bottom">
                                <h5 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bi bi-share text-purple me-2"></i>
                                    Mạng xã hội
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(Model.facebook))
                                {
                                    <div class="p-3 mb-3 rounded bg-light">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-facebook text-primary me-3 fs-5"></i>
                                            <div class="flex-grow-1">
                                                <small class="text-muted d-block">Facebook</small>
                                                <a href="@Model.facebook" target="_blank" class="text-primary text-decoration-none fw-medium small">
                                                    @Model.facebook
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.zalo))
                                {
                                    <div class="p-3 mb-3 rounded bg-light">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-chat-dots text-info me-3 fs-5"></i>
                                            <div class="flex-grow-1">
                                                <small class="text-muted d-block">Zalo</small>
                                                <a href="@Model.zalo" target="_blank" class="text-info text-decoration-none fw-medium small">
                                                    @Model.zalo
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.youtube))
                                {
                                    <div class="p-3 rounded bg-light">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-youtube text-danger me-3 fs-5"></i>
                                            <div class="flex-grow-1">
                                                <small class="text-muted d-block">YouTube</small>
                                                <a href="@Model.youtube" target="_blank" class="text-danger text-decoration-none fw-medium small">
                                                    @Model.youtube
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Creation Date -->
                <div class="col-md-6">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="card-title mb-0 d-flex align-items-center">
                                <i class="bi bi-calendar text-secondary me-2"></i>
                                Thông tin khác
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="p-4 rounded" style="background-color: #e7e3ff; border: 1px solid #d1c4e9;">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar-event text-secondary me-3 fs-5"></i>
                                    <div>
                                        <small class="text-muted d-block">Ngày tạo</small>
                                        <strong style="color: #6f42c1;">@Model.createdAt?.ToString("dd/MM/yyyy HH:mm")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
    
    .text-purple {
        color: #6f42c1 !important;
    }
    
    .bg-outline-secondary {
        background-color: transparent !important;
        border: 1px solid #6c757d !important;
    }
    
    .text-warning-emphasis {
        color: #997404 !important;
    }
    
    .text-info-emphasis {
        color: #055160 !important;
    }
    
    @@media (max-width: 768px) {
        .display-6 {
            font-size: 1.5rem;
        }
        
        .card-body {
            padding: 1rem;
        }
    }
</style>