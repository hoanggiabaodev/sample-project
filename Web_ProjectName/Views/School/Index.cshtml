<script>
$(function () {
    $("#contactForm").on("submit", function (e) {
        e.preventDefault();

        let form = $(this);
        let formData = form.serialize(); // serialize form inputs

    // Chỉ bổ sung các trường cần thiết
    let extraQuery = $.param({ Remark: "", Status: "1" });

        // Nếu formData có dữ liệu thì nối thêm &, nếu không thì chỉ gán extraQuery
        if (formData.length > 0) {
            formData += "&" + extraQuery;
        } else {
            formData = extraQuery;
        }

        $.ajax({
            url: "/School/Create",
            type: "POST",
            data: formData,
            success: function (res) {
                alert("Gửi thành công!");
                form[0].reset();
            },
            error: function (xhr) {
                let message = "Có lỗi xảy ra khi gửi dữ liệu!";
                if (xhr.responseJSON && xhr.responseJSON.errors) {
                    message = "Lỗi validation:\n" + xhr.responseJSON.errors.join("\n");
                } else if (xhr.responseText) {
                    message = "Lỗi server: " + xhr.responseText;
                }
                alert(message);
            }
        });
    });
});
</script>

